<div class="backdrop"></div>
<header class="main-header">
	<button id="side-menu-toggle">Menu</button>
	<nav class="main-header__nav">
		<ul class="main-header__item-list">
			<li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Boutique</a></li> 
			<li class="main-header__item"><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Produits</a></li>
			<% if (isAuthenticated) { %>
			<li class="main-header__item"><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Panier</a></li>
			<li class="main-header__item"><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Mes Commandes</a></li>
